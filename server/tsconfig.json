{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mdjournal/contract/*": ["../packages/contract/mdjournal/*"]
    }
  },
  "include": ["src/**/*", "../packages/contract/mdjournal/**/*"],
  "exclude": ["node_modules", "dist"]
}
